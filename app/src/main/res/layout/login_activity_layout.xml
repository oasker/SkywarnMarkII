<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/login_relative_layout">


    <TextView

        android:text="Skywarn Weather Data Base"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:id="@+id/app_title"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_above="@+id/login_email_tv"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_email_tv"
        android:hint="email"
        android:textAlignment="center"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri|textPassword"
        android:ems="10"
        android:layout_below="@+id/login_email_tv"
        android:layout_alignStart="@+id/login_email_tv"
        android:layout_marginTop="18dp"
        android:id="@+id/login_password_tv"
        android:hint="password"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <Button
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:id="@+id/login_button_text"
            android:onClick="launchUserHome"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/login_with_fb_button"
            android:layout_alignEnd="@+id/login_with_fb_button"
            android:layout_height="63dp"
            android:layout_margin="15dp"
            android:padding="15dp" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/login_with_fb_button"
            android:background="@drawable/fb_login_button"
            android:layout_height="59dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/login_with_twitter_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:padding="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/login_with_twitter_button"

            android:background="@drawable/signin_with_twitter"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:layout_height="66dp" />

    </LinearLayout>

</LinearLayout>