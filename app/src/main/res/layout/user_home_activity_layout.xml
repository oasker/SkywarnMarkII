<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ToolbarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Skywarn Weather Database" />

    <TextView
        android:text="User Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_home_greeting_text"
        android:layout_marginTop="34dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:id="@+id/query_button_text"
        android:layout_above="@+id/submit_button_text"
        android:layout_centerHorizontal="true"
        android:onClick="launchQueryActivity"/>

    <Button
        android:text="Submit Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="107dp"
        android:id="@+id/submit_button_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="launchSubmitReportActivity"/>

</RelativeLayout>